<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="DefaultBackgroundColor" R="233" G="233" B="233" A="255" />
    <SolidColorBrush x:Key="DefaultBackgroundBrush" Color="#e9e9e9" />

    <LinearGradientBrush x:Key="BlueGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#b3e5fc" Offset="0"/>
        <GradientStop Color="#8cc8e3" Offset="0.05"/>
        <GradientStop Color="#609fbb" Offset="0.95"/>
        <GradientStop Color="#4a95b7" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="BlueGradientReversedBrush" StartPoint="0,1" EndPoint="0,0">
        <GradientStop Color="#b3e5fc" Offset="0"/>
        <GradientStop Color="#8cc8e3" Offset="0.05"/>
        <GradientStop Color="#609fbb" Offset="0.95"/>
        <GradientStop Color="#4a95b7" Offset="1"/>
    </LinearGradientBrush>
</ResourceDictionary>