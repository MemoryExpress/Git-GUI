<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="LeftToolbarStyle" TargetType="{x:Type Panel}">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#fff" Offset="0"></GradientStop>
                    <GradientStop Color="#f0f0f0" Offset="0.1"></GradientStop>
                    <GradientStop Color="#f0f0f0" Offset="0.9"></GradientStop>
                    <GradientStop Color="#e0e0e0" Offset="1"></GradientStop>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="LeftToolbarTitleImageStyle" TargetType="{x:Type Image}">
        <Setter Property="Margin" Value="2 0 4 -1" />
    </Style>

    <Style x:Key="LeftToolbarTitleStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontFamily" Value="Segoe UI Semibold" />
        <Setter Property="Margin" Value="0,2,4,2" />
        <Setter Property="RenderOptions.ClearTypeHint" Value="Enabled" />
        <Setter Property="TextOptions.TextFormattingMode" Value="Display" />
        <Setter Property="TextOptions.TextRenderingMode" Value="ClearType" />
    </Style>
</ResourceDictionary>