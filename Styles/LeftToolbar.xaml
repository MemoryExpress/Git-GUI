<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="LeftToolbar" TargetType="{x:Type StackPanel}">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#fff" Offset="0"></GradientStop>
                    <GradientStop Color="#f0f0f0" Offset="0.1"></GradientStop>
                    <GradientStop Color="#f0f0f0" Offset="0.9"></GradientStop>
                    <GradientStop Color="#e0e0e0" Offset="1"></GradientStop>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
           
        <Style.Resources>
            <Style TargetType="{x:Type TextBlock}">
                <Setter Property="Foreground" Value="#3595c2" />
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="FontSize" Value="12" />
                <Setter Property="FontFamily" Value="Segoe UI Semibold" />
                <Setter Property="Margin" Value="0 0 0 16" />
                <Setter Property="RenderOptions.ClearTypeHint" Value="Enabled"></Setter>
            </Style>

            <Style TargetType="{x:Type Image}">
                <Setter Property="Margin" Value="0 0 6 -3" />
            </Style>
        </Style.Resources>
    </Style>
</ResourceDictionary>