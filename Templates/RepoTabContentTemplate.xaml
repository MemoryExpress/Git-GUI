<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:GG.UserControls">
    
    <!-- This is the content template for the application main tab control. -->
    <DataTemplate x:Key="repoTabContentTemplate">
        <DockPanel Background="{StaticResource DefaultBackgroundBrush}">
            <controls:MainMenu DockPanel.Dock="Top" Margin="4,4,0,0" />
            <controls:TopToolbar DockPanel.Dock="Top" />

            <controls:LeftToolbar DockPanel.Dock="Left" VerticalAlignment="Stretch" />
            <controls:CenterArea DockPanel.Dock="Right" />
        </DockPanel>
    </DataTemplate>
    
</ResourceDictionary>