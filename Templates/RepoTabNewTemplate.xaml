<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:GG">
    
    <local:MainWindowViewModel x:Key="MainWindow"/>
    
    <!-- Defines the new tab template, the "+" tab. -->
    <DataTemplate x:Key="newTabTemplate">
        <Button Content="+" Command="{Binding Path=CreateTabCommand, Source={StaticResource MainWindow}}" Padding="0" Width="28" Height="20" Margin="0,0,0,-2" />
    </DataTemplate>
</ResourceDictionary>