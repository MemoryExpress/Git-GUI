<UserControl x:Class="GG.UserControls.NewTabPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d">
    <DockPanel>
        
        <GroupBox Header="Recent repositories">
            <StackPanel>
                <TextBlock>Git-GUI</TextBlock>
                <TextBlock>Symfony 2</TextBlock>
                <TextBlock>Linux Kernel</TextBlock>
                <TextBlock>Foobar</TextBlock>
            </StackPanel>
        </GroupBox>
        
        <StackPanel DockPanel.Dock="Right" Margin="32,0,0,0">
            <Button>Add Local Repository</Button>
            <Button>Clone Remote Repository</Button>
            <Button>Create Local Repository</Button>
            <Button>Clone SVN Repository</Button>
            <Button>Create GitHub Repository</Button>
        </StackPanel>
    </DockPanel>
</UserControl>
